variable {α : Type*} (P : α → Prop) (Q : Prop)

theorem notEx_allNot (h : ¬∃ x, P x) : ∀ x, ¬P x := by
  intro x px
  exact h ⟨x, px⟩

example (h : ∀ x, ¬P x) : ¬∃ x, P x := by
  rintro ⟨x, px⟩
  apply h x
  exact px

